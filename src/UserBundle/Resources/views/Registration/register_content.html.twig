{% trans_default_domain 'user' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
  <div class="form-group form-group-with-icon">
    <i class="fa fa-user"></i>
    <label>{{ 'username'|trans }}</label>
    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'maxlength':10}}) }}
    <div class="form-control-border"></div>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group form-group-with-icon">
    <i class="fa fa-envelope"></i>
    <label>{{ 'email'|trans }}</label>
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'maxlength':30}}) }}
    <div class="form-control-border"></div>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group form-group-with-icon">
    <i class="fa fa-lock"></i>
    <label>{{ 'password'|trans }}</label>
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'maxlength':15}}) }}
    <div class="form-control-border"></div>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group form-group-with-icon">
    <i class="fa fa-lock"></i>
    <label>{{ 'passwordrepeat'|trans }}</label>
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'maxlength':15}}) }}
    <div class="form-control-border"></div>
    <div class="help-block with-errors"></div>
  </div>

  <div>
    <input class="margintoplogin" type="submit" value="{{ 'registration'|trans }}" />
  </div>
{{ form_end(form) }}
