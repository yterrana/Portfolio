{% trans_default_domain 'user' %}

{% if error %}
  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
  {% if csrf_token %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}

  <div class="form-group form-group-with-icon">
    <i class="fa fa-user"></i>
    <label>{{ 'username'|trans }}</label>
    <input id="username" type="text" name="_username" class="form-control" placeholder required="required" maxlength="10" />
    <div class="form-control-border"></div>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group form-group-with-icon">
    <i class="fa fa-lock"></i>
    <label>{{ 'password'|trans }}</label>
    <input id="password" type="password" name="_password" class="form-control" placeholder required="required" maxlength="15" />
    <div class="form-control-border"></div>
    <div class="help-block with-errors"></div>
  </div>

  <div class="clearfix"></div>
  <input class="margintoplogin" type="submit" id="_submit" name="_submit" value="{{ 'connexion'|trans }}" />
</form>
